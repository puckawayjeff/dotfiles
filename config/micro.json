{
    "colorscheme": "dracula",
    "autosu": false,
    "autosave": 0,
    "clipboard": "external",
    "cursorline": true,
    "diffgutter": true,
    "encoding": "utf-8",
    "eofnewline": true,
    "ignorecase": true,
    "indentchar": " ",
    "keepautoindent": true,
    "mkparents": true,
    "mouse": true,
    "rmtrailingws": true,
    "ruler": true,
    "savecursor": true,
    "savehistory": true,
    "saveundo": true,
    "scrollbar": true,
    "scrollmargin": 3,
    "scrollspeed": 2,
    "softwrap": false,
    "statusformatl": "$(filename) $(modified)($(line),$(col)) | ft:$(opt:filetype) | $(opt:fileformat) | $(opt:encoding)",
    "statusformatr": "$(bind:ToggleKeyMenu): bindings, $(bind:ToggleHelp): help",
    "statusline": true,
    "syntax": true,
    "tabmovement": false,
    "tabsize": 4,
    "tabstospaces": true,
    "useprimary": true
}
